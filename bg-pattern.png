.resume::before{
  content:"";
  position:absolute;
  right:-42px;
  bottom:-32px;
  width:520px;
  height:380px;
  background-image: url("assets/bg-pattern.png");
  background-repeat: repeat;
  background-size: 220px 120px;
  opacity:0.12;
  transform: rotate(3deg);
  z-index:0;
  pointer-events:none;
}
.resume::after{
  content:"";
  position:absolute;
  left:-30px;
  bottom:-20px;
  width:420px;
  height:300px;
  background-image: url("assets/bg-pattern.png");
  background-repeat: repeat;
  background-size: 220px 120px;
  opacity:0.10;
  transform: rotate(-6deg);
  z-index:0;
  pointer-events:none;
}
